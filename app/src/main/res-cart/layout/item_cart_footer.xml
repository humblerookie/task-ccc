<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_normal"
    app:cardCornerRadius="@dimen/spacing_tiny">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/spacing_small">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.demo.craftscc.core.widgets.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart.item.sub_total"
                android:textColor="@color/black_40"
                android:textSize="@dimen/font_large"
                app:customFont="@string/font.bold" />

            <com.demo.craftscc.core.widgets.TextViewPlus
                android:id="@+id/item_sub_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:gravity="right"
                android:textColor="@color/black_40"
                app:customFont="@string/font.thin"
                tools:text="24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.demo.craftscc.core.widgets.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart.title.shipping"
                android:textColor="@color/black_40"
                android:textSize="@dimen/font_large"
                app:customFont="@string/font.bold" />

            <com.demo.craftscc.core.widgets.TextViewPlus
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/black_40"
                app:customFont="@string/font.thin" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.demo.craftscc.core.widgets.TextViewPlus
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cart.title.total"
                android:textColor="@color/black"
                android:textSize="@dimen/font_large"
                app:customFont="@string/font.bold" />

            <com.demo.craftscc.core.widgets.TextViewPlus
                android:id="@+id/item_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:gravity="right"
                android:textColor="@color/black"
                app:customFont="@string/font.thin"
                tools:text="24" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>