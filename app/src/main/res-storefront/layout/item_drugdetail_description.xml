<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_small"
    android:paddingTop="@dimen/spacing_normal">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/grey_20" />

    <com.demo.craftscc.core.widgets.TextViewPlus
        android:id="@+id/drug_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        app:customFont="@string/font.bold"
        tools:text="Yolo stuff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:orientation="horizontal">

        <com.demo.craftscc.core.widgets.TextViewPlus
            android:id="@+id/undiscounted_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginRight="@dimen/spacing_normal"
            android:background="@drawable/strike"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            app:customFont="@string/font.thin"
            tools:text="Rs. 1900" />

        <com.demo.craftscc.core.widgets.TextViewPlus
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/undiscounted_price"
            android:gravity="right"
            android:textColor="@color/black"
            android:textSize="@dimen/font_small"
            app:customFont="@string/font.bold"
            tools:text="Rs. 1500" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/grey_20" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.demo.craftscc.core.widgets.TextViewPlus
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating"
            android:textColor="@color/black"
            android:textSize="@dimen/font_normal"
            app:customFont="@string/font.regular"

            />

        <com.demo.craftscc.core.widgets.TextViewPlus
            android:id="@+id/rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:textColor="@color/cart_green"
            android:textSize="@dimen/font_normal"
            app:customFont="@string/font.bold"
            tools:text="Rating" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/grey_20" />

    <com.demo.craftscc.core.widgets.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:text="@string/drugdetails.title.product_details"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        app:customFont="@string/font.regular" />

    <com.demo.craftscc.core.widgets.TextViewPlus
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:text="@string/drugdetails.title.product_details"
        android:textColor="@color/black_40"
        android:textSize="@dimen/font_small"
        app:customFont="@string/font.thin" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_small"
        android:background="@color/grey_20" />

    <com.demo.craftscc.core.widgets.TextViewPlus
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:text="@string/drugdetails.title.seller_details"
        android:textColor="@color/black"
        android:textSize="@dimen/font_normal"
        app:customFont="@string/font.regular" />

    <com.demo.craftscc.core.widgets.TextViewPlus
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_tiny"
        android:text="@string/drugdetails.title.product_details"
        android:textColor="@color/black_40"
        android:textSize="@dimen/font_normal"
        app:customFont="@string/font.thin" />
</LinearLayout>